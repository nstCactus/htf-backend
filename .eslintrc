{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6":  true
  },
  "parser-options": {
    "ecmaVersion": 6
  },
  "globals" : {
    "sails": true,
    "async": true,
    "Booking ": true,
    "Artist ": true,
    "Set ": true,
    "FacebookGraph": true
  },
  "rules": {
    // Require strict mode
    "strict": [2, "global"],

    // Potential errors
    "no-cond-assign": 1,
    "no-console": 0,
    "no-constant-condition": 1,
    "valid-jsdoc": 1,

    // Best practices
    "block-scoped-var": 2,
    "complexity": ["error", 10],
    "consistent-return": 2,
    "curly": 2,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-case-declarations": 2,
    "no-else-return": 1,
    "no-empty-pattern": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-floating-decimal": 1,
    "no-implicit-coercion": 2,
    "no-implicit-globals": 1,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-labels": 2,
    "no-lone-blocks": 1,
    "no-loop-func": 2,
    "no-multi-spaces": [ 2, { "exceptions": {
      "VariableDeclarator": true,
      "Property":           true,
      "ImportDeclaration":  true
    } }],
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-param-reassign": 1,
    "no-proto": 2,
    "no-redeclare": 1,
    "no-return-assign": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unmodified-loop-condition": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-useless-concat": 1,
    "no-useless-escape": 1,
    "no-void": 2,
    "no-with": 2,
    "radix": 2,
    "wrap-iife": [ 2, "any" ],
    "yoda": 2,


    // Variables
    "no-catch-shadow": 2,
    "no-delete-var": 2,
//    "no-undef": 2,
    "no-undefined": 2,
    "no-unused-vars": [ 1, { "vars": "local" } ],
    "no-use-before-define": [2, "nofunc"],



    // Node specific
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-env": 1,
    "no-process-exit": 2,
    "no-sync": 2,


    // Code style
    "array-bracket-spacing": [ 1, "always" ],
    "block-spacing": [ 1, "always" ],
    "brace-style":  1,
    "camelcase": 1,
    "comma-dangle": [ 1, "always-multiline" ],
    "comma-spacing": 1,
    "comma-style": 1,
    "computed-property-spacing": 1,
    "consistent-this": [ 1, "that" ],
    "eol-last": 1,
    "func-style": [ 1, "declaration" ],
    "indent": [ 1, 2, {
      "SwitchCase": 1,
      "VariableDeclarator": { "var": 2, "let": 2, "const": 3 }
    } ],
    "key-spacing": [ 1, {
      "multiLine": {
        "beforeColon": false,
        "afterColon":true
      },
      "align": {
        "beforeColon": false,
        "afterColon": true,
        "on": "value"
      }
    }],
    "keyword-spacing": 1,
    "linebreak-style": 1,
    "new-cap": 1,
    "new-parens": 1,
    "newline-before-return": 1,
    "no-array-constructor": 1,
    "no-bitwise": 1,
    "no-lonely-if": 1,
    "no-mixed-operators": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-multiple-empty-lines": [ 1, { "max": 3 } ],
    "no-negated-condition": 1,
    "no-nested-ternary": 1,
    "no-new-object": 1,
    "no-spaced-func": 1,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 1,
    "no-whitespace-before-property": 1,
    "object-curly-newline": [ 1, { "multiline": true } ],
    "object-curly-spacing": [ 1, "always" ],
    "object-property-newline": 1,
    "one-var-declaration-per-line": 1,
    "operator-assignment": 1,
    "operator-linebreak": [ 1, "before" ],
    "padded-blocks": [ 1, "never" ],
    "quotes": [ 2, "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true }
    ],
    "semi-spacing": 1,
    "semi": 2,
    "space-before-blocks": [ 1, {
      "functions": "never",
      "classes": "never",
      "keywords": "always"
    }],
    "space-before-function-paren": [ 1, "never" ],
    "space-in-parens": [ 1, "never"],
    "space-infix-ops": [ 1, { "int32Hint": true } ],
    "space-unary-ops": [ 1, {
      "words": true,
      "nonwords": false
    }],
    "wrap-regex": 1
  }
}
